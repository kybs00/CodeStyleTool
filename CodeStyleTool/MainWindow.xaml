<Window x:Class="CodeStyleTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CodeStyleTool"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBox x:Name="SolutionFolderTextBox" Width="260" Height="26"/>
            <Button x:Name="OperationButton" Click="OperationButton_OnClick" Content="清理样式" Width="100" Height="30" Margin="0 12 0 0"/>
        </StackPanel>
    </Grid>
</Window>
